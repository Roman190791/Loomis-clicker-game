import { useEffect, useState } from 'react';
import './App.css';

function App() {
  const [tgUser, setTgUser] = useState(null);

  useEffect(() => {
    const tg = window.Telegram.WebApp;
    tg.expand(); // Розгортає вікно
    tg.ready(); // Telegram готовий

    const user = tg.initDataUnsafe?.user;
    if (user) {
      setTgUser(user);

      // Надсилання на бекенд (реалізуємо в КРОЦІ 2)
      fetch("https://your-backend-url.com/api/user", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ id: user.id, username: user.username }),
      });
    }
  }, []);

  return (
    <div className="App">
      <h1>Loomis Clicker</h1>
      {tgUser ? (
        <p>Привіт, {tgUser.first_name}! (ID: {tgUser.id})</p>
      ) : (
        <p>Завантаження Telegram WebApp...</p>
      )}
      {/* Тут будуть кліки, монети, баланс */}
    </div>
  );
}

export default App;
